<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/colorContent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_team"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_launcher_round"/>
        <TextView
            android:singleLine="true"
            android:id="@+id/tv_teamname"
            android:layout_marginTop="10dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="drogkle"/>
        <TextView
            android:id="@+id/tv_teamtype"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="footsal"
            android:layout_gravity="center"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/tv_teamregion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="incheon"
            android:textSize="16sp"
            android:layout_gravity="center"/>

    </LinearLayout>


</android.support.v7.widget.CardView>